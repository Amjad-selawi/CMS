@using CMS.Domain.Enums;
@model CMS.Application.DTOs.NotificationsDTO

<h1>Edit Notification</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="NotificationsId" />
    <div class="form-group">
        <label asp-for="ReceiverId">Receiver ID:</label>
        <input asp-for="ReceiverId" class="form-control" />
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>





    <div class="form-group">
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        <input type="submit" value="Submit" class="btn btn-outline-primary" />
    </div>
</form>

