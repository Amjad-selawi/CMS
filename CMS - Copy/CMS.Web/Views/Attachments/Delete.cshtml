@model CMS.Application.DTOs.AttachmentDTO

<h2>Delete Attachment</h2>

<h3>Are you sure you want to delete this attachment?</h3>
<div>
    <h4>Attachment details:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">File Name</dt>
        <dd class="col-sm-10">@Model.FileName</dd>
        <dt class="col-sm-2">File Size</dt>
        <dd class="col-sm-10">@Model.FileSize</dd>
        <!-- Add more fields here if needed -->
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
