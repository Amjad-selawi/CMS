@model IEnumerable<CMS.Application.DTOs.Register>
@{
    ViewData["Title"] = "Registered Users";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Registered Users</h5>
                <div>
                    <a asp-action="Create" class="btn btn-primary">Add New User</a>
                </div>
            </div>
            <div class="card-body">

                <table id="add-rows" class="table table-nowrap dt-responsive table-bordered display" style="width:100%">
                    <thead>
                        <tr>
                            @*<th>User ID</th>*@
                            <th>Email</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                @*<td>@user.RegisterrId</td>*@
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td>@user.SelectedRole</td>
                                <td>
                                    <a class="bx bxs-edit-alt" style="font-size:x-large" asp-action="Edit" asp-route-id="@user.RegisterrId"></a> |
                                    <a class="bx bx-detail" style="font-size:x-large" asp-action="Details" asp-route-id="@user.RegisterrId"></a> |
                                    <a class="ri-delete-bin-2-line text-danger" style="font-size:x-large" asp-action="Delete" asp-route-id="@user.RegisterrId"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->

