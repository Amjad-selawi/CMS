@model IEnumerable<CMS.Application.DTOs.PositionDTO>


@{
    ViewData["Title"] = "Positions";
}



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <div>
                    <a asp-action="AddPosition" class="btn btn-primary">Create New Record</a>
                </div>
            </div>


            <div class="card-body">
                <table class="table table-nowrap dt-responsive table-bordered display" style="width:100%">
                    <thead>
                        <tr>
                            
                            <th>position Name</th>
                            <th>Evalution Form</th>
                          
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pos in Model)
                        {
                            <tr>
                               
                                <td>@pos.Name</td>

                                @if (pos.EvaluationId != null)
                                {
                                    <td><a asp-controller="Attachments" asp-action="Download" asp-route-id="@pos.EvaluationId">Download Form</a></td>
                                }
                                else
                                {
                                    <td> </td>
                                }

                                <td>
                                    <a class="bx bxs-edit-alt" style="font-size:x-large" asp-action="UpdatePosition" asp-route-id="@pos.Id" asp-route-idd="@pos.EvaluationId"></a>
                                    <a class="ri-delete-bin-2-line text-danger" style="font-size:x-large" asp-action="GetDeleteConfirmation" asp-route-id="@pos.Id" class="btn btn-danger"></a>
                                </td>




                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>