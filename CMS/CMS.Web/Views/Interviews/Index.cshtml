@model IEnumerable<CMS.Application.DTOs.InterviewsDTO>

<h2>Interviews</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-primary font-italic">Create New</a>
</p>

<table class="datatable">
    <thead>
        <tr>

           <th> Candidate Name</th>
           <th>Position</th>
            <th>InterviewerId</th>
            <th>
                Date
            </th>
            <th hidden>
                Parent ID
            </th>

            <th>
                Score
            </th>
            <th>
                Status
            </th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.CandidateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionName)
                </td>

                <td>@item.InterviewerId</td>
                <td>
                    @item.Date
                </td>
                <td hidden>
                    @item.ParentId
                </td>


                <td>
                    @item.Score
                </td>
                <td>
                    @item.Status
                </td>

                <td>@item.Notes</td>

                <td>
                    <a class="bx bxs-edit-alt" style="font-size:x-large" asp-action="Edit" asp-route-id="@item.InterviewsId"></a> |
                    <a class="bx bx-detail" style="font-size:x-large" asp-action="Details" asp-route-id="@item.InterviewsId"></a> |
                    <a class="ri-delete-bin-2-line text-danger" style="font-size:x-large" asp-action="Delete" asp-route-id="@item.InterviewsId"></a>
                </td>
            </tr>
        }
    </tbody>
</table>



