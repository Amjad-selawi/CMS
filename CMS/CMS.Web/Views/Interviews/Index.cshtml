@model IEnumerable<CMS.Application.DTOs.InterviewsDTO>
@{
    ViewData["Title"] = "Interviews";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Interviews</h5>
                <div>
                    <a asp-action="Create" class="btn btn-primary">Create New Record</a>
                </div>
            </div>
            <div class="card-body">

                <table id="add-rows" class="table table-nowrap dt-responsive table-bordered display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Candidate Name</th>
                            <th>Position</th>
                            <th>InterviewerId</th>
                            <th>Date</th>
                            <th hidden>Parent ID</th>
                            <th>Score</th>
                            <th>Status</th>
                            <th>Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.FullName
                                </td>
                                <td>@item.Name</td>

                                <td>@item.InterviewerId</td>
                                <td>
                                    @item.Date
                                </td>
                                <td hidden>
                                    @item.ParentId
                                </td>


                                <td>
                                    @item.Source
                                </td>
                                <td>
                                    @item.Status
                                </td>

                                <td>@item.Notes</td>

                                <td>
                                    <a class="bx bxs-edit-alt" style="font-size:x-large" asp-action="Edit" asp-route-id="@item.InterviewsId"></a> |
                                    <a class="bx bx-detail" style="font-size:x-large" asp-action="Details" asp-route-id="@item.InterviewsId"></a> |
                                    <a class="ri-delete-bin-2-line text-danger" style="font-size:x-large" asp-action="Delete" asp-route-id="@item.InterviewsId"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->
