@using CMS.Domain.Enums;
@model CMS.Application.DTOs.InterviewsDTO

<h2>Edit</h2>

<form asp-action="Edit" asp-route-id="@Model.InterviewsId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">  <input type="hidden" asp-for="InterviewsId" /> </div>

    <div class="form-group">
        <label asp-for="candidateId" class="control-label">Candidate Name</label>
        @Html.DropDownListFor(model => model.candidateId, (SelectList)ViewBag.candidateList, "Select a Name", new { @class = "form-control" })
        <span asp-validation-for="candidateId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="positionId" class="control-label">Position</label>
        @Html.DropDownListFor(model => model.positionId, (SelectList)ViewBag.positionList, "Select a Position", new { @class = "form-control" })
        <span asp-validation-for="positionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InterviewerId" class="control-label"></label>
        <input asp-for="InterviewerId" class="form-control" />
        <span asp-validation-for="InterviewerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group" hidden>
        <label asp-for="ParentId" class="control-label"></label>
        <input asp-for="ParentId" class="form-control" />
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StatusId" class="control-label">Status</label>
        @if (ViewBag.StatusDTOs != null)
        {
            <select asp-for="StatusId" class="form-control">
                <option value="">Select a Status</option>
                @foreach (var status in ViewBag.StatusDTOs)
                {
                    <option value="@status.Value" selected="@(status.Value == Model.StatusId.ToString())">@status.Text</option>
                }
            </select>
        }
        else
        {
            <p>No statuses available.</p>
        }
        <span asp-validation-for="StatusId" class="text-danger"></span>

    </div>

