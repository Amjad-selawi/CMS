@using CMS.Domain.Enums;
@model CMS.Application.DTOs.InterviewsDTO

<h2>Create</h2>

<form asp-action="Create" id="createForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">

        <label asp-for="candidateId" class="control-label">candidate</label>
        @if (ViewBag.candidateDTOs != null)
        {
            <select asp-for="candidateId" asp-items="@(ViewBag.candidateDTOs)" class="form-control">
                <option value="">Select a candidate</option>

            </select>
        }
        else
        {
            <p>No candidates available.</p>
        }
        <span asp-validation-for="candidateId" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="positionId" class="control-label">Position</label>
        @Html.DropDownListFor(model => model.positionId, (SelectList)ViewBag.positionDTOs, "Select a Position", new { @class = "form-control" })
        <span asp-validation-for="positionId" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label asp-for="InterviewerId" class="control-label">interviewer</label>
        @if (ViewBag.interviewersDTOs != null)
        {
            <select asp-for="InterviewerId" asp-items="@(ViewBag.interviewersDTOs)" class="form-control">
                <option value="">Select an Interviewer </option>

            </select>
        }
        else
        {
            <p>No interviewers available.</p>
        }
        <span asp-validation-for="InterviewerId" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group" hidden>
        <label asp-for="ParentId" class="control-label"></label>
        <input asp-for="ParentId" class="form-control" />
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>


    <div class="form-group">

        <input type="submit" value="Create"  class="btn btn-outline-primary" />
    </div>

</form>
<a class="btn btn-secondary" asp-action="Index">Back to List</a>
<p>@Html.ValidationSummary()</p>
<script>
    document.getElementById("createForm").onsubmit=function(){
        return confirmCreate();
    };

    function confirmCreate(){
        if(confirm("Are you sure from the info you want to submit? it can not be modified")){
            return true;
        }else{
            return false;
        }
    }
</script>