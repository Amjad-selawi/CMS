@model CMS.Application.DTOs.InterviewsDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<style>
    /* Style for the modal container */
    .confirmation-modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        z-index: 1000;
    }

    /* Style for the overlay background */
    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }

    /* Style for the buttons */
    .modal-buttons {
        text-align: right;
        margin-top: 10px;
    }

        /* Style for the OK button */
        .modal-buttons button.ok {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        /* Style for the Cancel button */
        .modal-buttons button.cancel {
            background-color: #ccc;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }
</style>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>InterViews</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            First Interviewer Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InterviewerName)
        </dd>

        <dt class="col-sm-2">
            Second Interviewer Name:
        </dt>
        <dd class="col-sm-10">
            @Model.SecondInterviewerName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
   
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>

        @if (Model.AttachmentId != null)
        {
            <dt class="col-sm-2">
                Evaluation:
            </dt>
            <dd class="col-sm-10">
                <a asp-controller="Attachments" asp-action="Download" asp-route-id="@Model.AttachmentId">Download evaluation</a>
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                Evaluation:
            </dt>
            <dd class="col-sm-10">
                There is no Evaluation for this interview
            </dd>
        }
    </dl>
    
    <form asp-action="Delete" class="text-end">
         <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        <input type="submit" value="Delete" onclick="showConfirmationDialog(event)" class="btn btn-danger" />
    </form>
</div>




<div class="overlay" id="overlay"></div>

<div class="confirmation-modal" id="confirmation-modal">
    <p>Are you sure you want to delete this interview? </p>
    <div class="modal-buttons">
        <button class="ok" onclick="confirmDelete()">OK</button>
        <button class="cancel" onclick="cancelDelete()">Cancel</button>
    </div>
</div>

<script>
    function showConfirmationDialog(event) {
        event.preventDefault();
        document.getElementById('confirmation-modal').style.display = 'block';
        document.getElementById('overlay').style.display = 'block';
    }


    function confirmDelete() {
        // Your code for confirming the delete action here if needed
        document.querySelector('form').submit();
        hideConfirmationDialog();
    }


    function cancelDelete() {
        hideConfirmationDialog();
    }

    function hideConfirmationDialog() {
        document.getElementById('confirmation-modal').style.display = 'none';
        document.getElementById('overlay').style.display = 'none';
    }
</script>