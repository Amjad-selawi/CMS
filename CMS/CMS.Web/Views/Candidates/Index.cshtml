@model IEnumerable<CMS.Application.DTOs.CandidateDTO>
@{
    ViewData["Title"] = "Candidates";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Candidates</h5>
                <div>
                    <a asp-action="Create" class="btn btn-primary">Create New Record</a>
                </div>
            </div>
            <div class="card-body">

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Phone Number</th>
            <th>Position</th>
            <th>Company</th>
            <th>Email</th>
            <th>Address</th>
            <th>Experience</th>
            <th>LinkedInUrl</th>
            <th>CV</th>
            <th>CountryId</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => candidate.FullName)</td>
                <td>@Html.DisplayFor(modelItem => candidate.Phone)</td>
                <td>@Html.DisplayFor(modelItem => candidate.PositionId)</td>
                <td>@Html.DisplayFor(modelItem => candidate.Email)</td>
                <td>@Html.DisplayFor(modelItem => candidate.Address)</td>
                <td>@Html.DisplayFor(modelItem => candidate.Experience)</td>
                <td>@Html.DisplayFor(modelItem => candidate.LinkedInUrl)</td>
                <td><a asp-controller="Attachments" asp-action="Download" asp-route-id="@candidate.CVAttachmentId">Download CV</a></td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@candidate.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@candidate.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@candidate.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->
