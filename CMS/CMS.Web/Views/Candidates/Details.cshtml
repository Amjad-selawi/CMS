@model CMS.Application.DTOs.CandidateDTO
<h2>Candidate Details</h2>

<dl class="row">
    <dt class="col-sm-2">Full Name:</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

    
    <dt class="col-sm-2">Phone:</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

   @*  <dt class="col-sm-2">PositionId:</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
 *@
    <dt class="col-sm-2">CV Provider name:</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.CompanyName)</dd>


    <dt class="col-sm-2">Experience:</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Experience)</dd>



    @if (Model.CVAttachmentId != null)
    {
        <dt class="col-sm-2">CV Attachment:</dt>
        <dd class="col-sm-10">

            <a asp-controller="Attachments" asp-action="Download" asp-route-id="@Model.CVAttachmentId">Download CV</a>

        </dd>
    }
    else
    {
        <dt class="col-sm-2">CV Attachment:</dt>
        <dd class="col-sm-10">There is no CV for this candidate</dd>
    }
    

    @* <dt class="col-sm-2">Country Name:</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.CountryName)</dd> *@

    <!-- Add more details here as needed -->
</dl>

