@model CMS.Application.DTOs.CandidateDTO


<div class="card">
    <div class="card-body">
        <h2>Candidate Details</h2>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">Full Name:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-2">Phone:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-2">CV Provider name:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CompanyName)</dd>

            <dt class="col-sm-2">Level:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PositionName)</dd>

            <dt class="col-sm-2">Track:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.TrackName)</dd>

            <dt class="col-sm-2">Experience:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Experience)</dd>

            @if (Model.CVAttachmentId != null)
            {
                <dt class="col-sm-2">CV Attachment:</dt>
                <dd class="col-sm-10">
                    <a asp-controller="Attachments" asp-action="Download" asp-route-id="@Model.CVAttachmentId" class="btn btn-link">
                        <i class="bx bxs-cloud-download" style="font-size: x-large;"></i> Download CV
                    </a>
                </dd>
            }
            else
            {
                <dt class="col-sm-2">CV Attachment:</dt>
                <dd class="col-sm-10">There is no CV for this candidate</dd>
            }
        </dl>
    </div>
</div>

<div class="form-group mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
