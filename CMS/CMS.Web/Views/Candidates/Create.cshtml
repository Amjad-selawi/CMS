@model CMS.Application.DTOs.CandidateCreateDTO

<h2>Create Candidate</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" autocomplete="off" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" autocomplete="off" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label asp-for="PositionId" class="control-label"></label>
        @if (ViewBag.positions != null)
        {
            <select asp-for="PositionId" asp-items="@(ViewBag.positions)" class="form-control">
                <option value=""> Position</option>
                
            </select>
        }
@*  <input asp-for="DesiredPosition" class="form-control" autocomplete="off" />*@
        <span asp-validation-for="PositionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" autocomplete="off" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" autocomplete="off" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Experience" class="control-label"></label>
        <input asp-for="Experience" class="form-control" autocomplete="off" />
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LinkedInUrl" class="control-label"></label>
        <input asp-for="LinkedInUrl" class="form-control" autocomplete="off" />
        <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
    </div>

   @* <div class="form-group">
        <label asp-for="CVAttachmentId" class="control-label"></label>
        <input asp-for="CVAttachmentId" class="form-control" />
        <span asp-validation-for="CVAttachmentId" class="text-danger"></span>
    </div>*@
    <div class="form-group">
        <label for="file">Upload CV:</label>
        <input type="file" id="file" name="file" class="form-control-file" />
    </div>
   
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

