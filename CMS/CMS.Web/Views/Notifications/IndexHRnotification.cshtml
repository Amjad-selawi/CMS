@model IEnumerable<CMS.Application.DTOs.NotificationsDTO>


<h1>Notifications</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
<div class="card-body">
<table id="add-rows" class="table table-nowrap dt-responsive table-bordered display" style="width:100%">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>Sent Date</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model)
        {
            <tr>


                <td >
                    <a style="color:blue" href="@Url.Action("Details", "Notifications", new { id = notification.NotificationsId })">
                        @notification.Title
                    </a>
                </td>

                <td>@notification.SendDate</td>


            </tr>
        }
    </tbody>
</table>
</div>
        </div>
    </div>
</div>





