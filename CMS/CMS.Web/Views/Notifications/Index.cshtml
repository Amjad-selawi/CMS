@model IEnumerable<CMS.Application.DTOs.NotificationsDTO>


<h1>Notifications</h1>

<p>
<a class="btn btn-outline-primary font-italic" asp-action="Create">Create New</a>
</p>

<table class="datatable">
    <thead>
        <tr>
           
            <th>Receiver ID</th>
            <th>Send Date</th>
            
            <th>
                @Html.DisplayNameFor(model => model.templatesDTO.Title)
            </th>
           @*  <th>
                Template Name
            </th> *@
            @* <th>Is Received</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model)
        {
            <tr>
             
                <td>@notification.ReceiverId</td>
                <td>@notification.SendDate</td>
                
                <td>
                    @Html.DisplayFor(modelItem => notification.templatesDTO.Title)
                </td>
               @*  <td>@notification.TemplateName</td> *@


                
                @* <td>@notification.IsReceived</td> *@
                <td>
                    <a class="bx bxs-edit-alt" style="font-size:x-large" asp-action="Edit" asp-route-id="@notification.NotificationsId"></a> |
                    <a class="bx bx-detail" style="font-size:x-large" asp-action="Details" asp-route-id="@notification.NotificationsId"></a> |
                    <a class="ri-delete-bin-2-line text-danger" style="font-size:x-large" asp-action="Delete" asp-route-id="@notification.NotificationsId"></a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>


  



