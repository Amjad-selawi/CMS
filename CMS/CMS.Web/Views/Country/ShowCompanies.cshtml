@model CMS.Application.DTOs.CountryDTO

@{
    ViewData["Title"] = "Country Details";
}

<div class="card">
    <div class="card-body">
        <h2>Companies in This Country</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Country Name:</dt>
            <dd class="col-sm-10">@Model.Name</dd>
        </dl>

        <dl class="row">
            <dt class="col-sm-2">Companies Name:</dt>
            <dd class="col-sm-10">
                @if (Model.companyDTOs.Any())
                {
                    @foreach (var com in Model.companyDTOs)
                    {
                        @com.Name

                        @if (com != Model.companyDTOs.Last())
                        {
                            @(",  ")
                        }
                    }
                }
                else
                {
                    <p>There is no companies connected to this country</p>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="form-group mt-3">
    <a asp-action="UpdateCountry" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="GetCountries" class="btn btn-secondary">Back to List</a>
</div>
