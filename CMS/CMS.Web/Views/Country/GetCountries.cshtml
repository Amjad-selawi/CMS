@model List<CMS.Application.DTOs.CountryDTO>
@{
    ViewData["Title"] = "Countries";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Countries</h5>
                <div>
                    <a asp-action="AddCountry" class="btn btn-primary">Add New Country</a>
                </div>
            </div>
            <div class="card-body">

                <table id="add-rows" class="table table-nowrap dt-responsive table-bordered display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Country Name</th>
                            <th>Number of Companies</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var country in Model)
                        {
                            <tr>
                                <td>@country.Name</td>
                                <td>@country.companyDTOs.Count</td>
                                <td>
                                    <a class="bx bxs-edit-alt" style="font-size:x-large" asp-action="UpdateCountry" asp-route-id="@country.Id"></a>|
                                    <a class="bx bx-detail" style="font-size:x-large" asp-action="ShowCompanies" asp-route-id="@country.Id"></a>
                                    |
                                    <form method="post" asp-action="DeleteCountry">
                                        <input type="hidden" name="id" value="@country.Id" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                    
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->