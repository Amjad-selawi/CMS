@model IEnumerable<CMS.Application.DTOs.TemplatesDTO>
@{
    ViewData["Title"] = "Templates";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Templates</h5>
                <div>
                    <a asp-action="Create" class="btn btn-primary">Create New Record</a>
                </div>
            </div>
            <div class="card-body">

                <table id="add-rows" class="table table-nowrap dt-responsive table-bordered display" style="width:100%">
                    <thead>
                        <tr>
                            @* <th>Name</th> *@
                            <th>Title</th>
                            <th>BodyDesc</th>
                            <th>Tamplate Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var template in Model)
                        {
                            <tr>
                                @* <td>@template.Name</td> *@
                                <td>@template.Title</td>
                                <td>@template.BodyDesc</td>
                                <td>@template.Name</td>
                                <td>
                                    <a class="bx bxs-edit-alt" style="font-size:x-large" asp-action="Edit" asp-route-id="@template.TemplatesId"></a> |
                                    <a class="bx bx-detail" style="font-size:x-large" asp-action="Details" asp-route-id="@template.TemplatesId"></a> |
                                    <a class="ri-delete-bin-2-line text-danger" style="font-size:x-large" asp-action="Delete" asp-route-id="@template.TemplatesId"></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->
