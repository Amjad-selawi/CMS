@model CMS.Application.DTOs.CompanyDTO
@{
    ViewData["Title"] = "Confirm Delete";
}




<style>
    /* Style for the modal container */
    .confirmation-modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        z-index: 1000;
    }

    /* Style for the overlay background */
    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }

    /* Style for the buttons */
    .modal-buttons {
        text-align: right;
        margin-top: 10px;
    }

        /* Style for the OK button */
        .modal-buttons button.ok {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        /* Style for the Cancel button */
        .modal-buttons button.cancel {
            background-color: #ccc;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }
</style>


<h2>Confirm Deletion</h2>

<p>Are you sure you want to delete the following company?</p>

<div>
 
    <dl class="row">
        <dt class="col-sm-2">
           Company Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Country Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountryName)
        </dd>
        @if (Model.PersonName != null)
        {
            <dt class="col-sm-2">
                Person Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PersonName)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                Person Name:
            </dt>
            <dd class="col-sm-10">
                There is no person name to cnotact.
            </dd>
        }

        @if (Model.Email != null)
        {
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                There is no Email to cnotact.
            </dd>
        }

        @if (Model.PhoneNumber != null)
        {
            <dt class="col-sm-2">
                Phone Number:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                Phone Number:
            </dt>
            <dd class="col-sm-10">
                There is no Phone Number to cnotact.
            </dd>
        }

      
       
    </dl>

    
<form method="post" asp-action="DeleteCompany" asp-route-id="@Model.Id" class="text-end">
        <button type="button" class="btn btn-danger" onclick="showConfirmationDialog()">Delete</button>
        <a asp-action="GetCompanies" class="btn btn-secondary">Back to List</a>

    </form>
</div>





<div class="overlay" id="overlay"></div>

<div class="confirmation-modal" id="confirmation-modal">
    <p>Are you sure you want to delete this company? Please note that if you proceed, all child entities associated with this company will also be deleted.</p>
    <div class="modal-buttons">
        <button class="ok" onclick="confirmDelete()">OK</button>
        <button class="cancel" onclick="cancelDelete()">Cancel</button>
    </div>
</div>

<script>
    function showConfirmationDialog() {
        document.getElementById('confirmation-modal').style.display = 'block';
        document.getElementById('overlay').style.display = 'block';
    }

    function confirmDelete() {
        document.querySelector('form').submit();
        hideConfirmationDialog();
    }

    function cancelDelete() {
        hideConfirmationDialog();
    }

    function hideConfirmationDialog() {
        document.getElementById('confirmation-modal').style.display = 'none';
        document.getElementById('overlay').style.display = 'none';
    }
</script>