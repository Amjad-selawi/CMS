@model CMS.Application.DTOs.CompanyDTO
@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Confirm Deletion</h2>

<p>Are you sure you want to delete the following company?</p>

<div>
 
    <dl class="row">
        <dt class="col-sm-2">
           Company Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt class="col-sm-2">
            Country Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountryName)
        </dd>
       
    </dl>

    
<form method="post" asp-action="DeleteCompany" asp-route-id="@Model.Id" class="text-end">
    <a asp-action="GetCompanies" class="btn btn-secondary">Back to List</a>
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
</form>
</div>