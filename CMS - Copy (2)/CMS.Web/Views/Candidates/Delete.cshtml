@model CMS.Application.DTOs.CandidateDTO

<h2>Delete Candidate</h2>
<h4>Are you sure you want to delete this candidate?</h4>

<style>
    /* Style for the modal container */
    .confirmation-modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        z-index: 1000;
    }

    /* Style for the overlay background */
    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }

    /* Style for the buttons */
    .modal-buttons {
        text-align: right;
        margin-top: 10px;
    }

        /* Style for the OK button */
        .modal-buttons button.ok {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        /* Style for the Cancel button */
        .modal-buttons button.cancel {
            background-color: #ccc;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }
</style>

<div>
    <h4>Candidate</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Full Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt>
            Phone Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

       @*  <dt>
            @Html.DisplayNameFor(model => model.PositionId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PositionId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CountryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CountryName)
        </dd> *@

        <dt>
            CV Provider name:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt class="col-sm-2">Level:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PositionName)</dd>

        <dt class="col-sm-2">Track:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TrackName)</dd>
        <dt>
            Experience:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Experience)
        </dd>
        @if (Model.CVAttachmentId != null)
            {
        <dt class="col-sm-2">CV Attachment:</dt>
        <dd class="col-sm-10">

                <a asp-controller="Attachments" asp-action="Download" asp-route-id="@Model.CVAttachmentId"><i style="font-size: x-large;" class="bx bxs-cloud-download"></i></a>
           
        </dd>
        }
        else
        {
            <dt class="col-sm-2">CV Attachment:</dt>
            <dd class="col-sm-10">There is no CV for this candidate</dd>
        }
      
    </dl>

    @using (Html.BeginForm())
    {
        <div class="form-actions no-color " >
            <button type="button" class="btn btn-danger" onclick="showConfirmationDialog()">Delete</button>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    }
</div>






<div class="overlay" id="overlay"></div>

<div class="confirmation-modal" id="confirmation-modal">
    <p>Are you sure you want to delete this candidate? Please note that if you proceed, all child entities associated with this candidate will also be deleted.</p>
    <div class="modal-buttons">
        <button class="ok" onclick="confirmDelete()">OK</button>
        <button class="cancel" onclick="cancelDelete()">Cancel</button>
    </div>
</div>

<script>
    function showConfirmationDialog() {
        document.getElementById('confirmation-modal').style.display = 'block';
        document.getElementById('overlay').style.display = 'block';
    }

    function confirmDelete() {
        document.querySelector('form').submit();
        hideConfirmationDialog();
    }

    function cancelDelete() {
        hideConfirmationDialog();
    }

    function hideConfirmationDialog() {
        document.getElementById('confirmation-modal').style.display = 'none';
        document.getElementById('overlay').style.display = 'none';
    }
</script>