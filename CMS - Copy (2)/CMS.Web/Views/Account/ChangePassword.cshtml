@model CMS.Application.DTOs.ChangePasswordDTO
@{
    ViewData["Title"] = "Change Password";
}

<h2>@ViewData["Title"]</h2>

<!-- Display validation errors here -->
<div class="text-danger">
    @Html.ValidationSummary()
</div>

<form asp-action="ChangePassword" method="post">
    <!-- Display validation errors here -->

    <div class="form-group" style="width:30%;">
        <label asp-for="CurrentPassword">Current Password:</label>
        <input asp-for="CurrentPassword" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group" style="width:30%; margin-top:15px;">
        <label asp-for="NewPassword">New Password:</label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group" style="width:30%;margin-top:15px;" >
        <label asp-for="ConfirmPassword">Confirm New Password:</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button style="margin-top: 20px;" type="submit" class="btn btn-primary">Change Password</button>

</form>
